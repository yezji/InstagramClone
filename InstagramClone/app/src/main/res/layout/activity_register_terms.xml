<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".src.register.terms.RegisterTermsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="@string/tv_terms_agree_all" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/dialog_padding_start_and_end"
        android:layout_marginEnd="@dimen/dialog_padding_start_and_end"

        android:textSize="@dimen/tv_helper"
        android:text="@string/tv_terms_helper"
        android:textColor="@color/et_dialog_gray"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dialog_padding_start_and_end"
        android:paddingEnd="@dimen/dialog_padding_start_and_end"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="@dimen/dialog_description_text"
            android:text="@string/tv_terms_agree_all"
            android:textColor="@color/black"
            android:textAlignment="textStart" />
        <CheckBox
            android:id="@+id/cb_agree_all"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:checked="false"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_blue_selector_circle" />
    </LinearLayout>

    <View
        style="@style/horizontal_bar_whitegray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dialog_padding_start_and_end"
        android:paddingEnd="@dimen/dialog_padding_start_and_end"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/dialog_description_text"
                android:text="@string/tv_terms_agree_1"
                android:textColor="@color/black"
                android:textAlignment="textStart" />
            <TextView
                android:id="@+id/tv_agree_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/tv_helper"
                android:text="@string/tv_terms_agree_link"
                android:textColor="@color/text_link_navy"
                android:textAlignment="textStart" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_agree_1"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:checked="false"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_blue_selector_circle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dialog_padding_start_and_end"
        android:paddingEnd="@dimen/dialog_padding_start_and_end"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/dialog_description_text"
                android:text="@string/tv_terms_agree_2"
                android:textColor="@color/black"
                android:textAlignment="textStart" />
            <TextView
                android:id="@+id/tv_agree_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/tv_helper"
                android:text="@string/tv_terms_agree_link"
                android:textColor="@color/text_link_navy"
                android:textAlignment="textStart" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_agree_2"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:checked="false"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_blue_selector_circle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dialog_padding_start_and_end"
        android:paddingEnd="@dimen/dialog_padding_start_and_end"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/dialog_description_text"
                android:text="@string/tv_terms_agree_3"
                android:textColor="@color/black"
                android:textAlignment="textStart" />
            <TextView
                android:id="@+id/tv_agree_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/tv_helper"
                android:text="@string/tv_terms_agree_link"
                android:textColor="@color/text_link_navy"
                android:textAlignment="textStart" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/cb_agree_3"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:checked="false"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_blue_selector_circle" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom|center">
        <View
            style="@style/horizontal_bar_whitegray" />
        <Button
            android:id="@+id/btn_agree"
            style="@style/btn_blue_text"

            android:layout_margin="@dimen/dialog_padding_start_and_end"

            android:enabled="false"
            android:textColor="@color/white_deactive"
            android:text="@string/btn_next"/>

    </LinearLayout>

</LinearLayout>