<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    app:contentInsetStart="10dp"
    app:contentInsetEnd="10dp"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_title"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:scaleType="fitStart"
            android:src="@drawable/img_login_logo"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,0.2:0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparency"
            android:scaleType="fitStart"
            android:src="@drawable/ic_main_add"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="22dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toStartOf="@id/ib_like"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_like"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparency"
            android:scaleType="fitStart"
            android:src="@drawable/ic_feed_like"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toStartOf="@id/ib_dm"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_dm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparency"
            android:scaleType="fitStart"
            android:src="@drawable/ic_feed_dm"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="22dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        style="@style/horizontal_bar_whitegray" />
</androidx.appcompat.widget.Toolbar>