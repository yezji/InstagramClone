        <item name="colorPrimary">@color/blue_active</item>
        <item name="colorPrimaryVariant">@color/blue_deactive</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_deactive</item>
        <item name="colorSecondaryVariant">@color/blue_active</item>
        <item name="colorOnSecondary">@color/black</item>
