<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="et_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">@dimen/register_padding_start_and_end</item>
        <item name="android:layout_marginEnd">@dimen/register_padding_start_and_end</item>

        <item name="android:background">@drawable/et_shape</item>
        <item name="android:padding">@dimen/et_login_padding</item>
        <item name="android:textSize">@dimen/et_login_text</item>

        <item name="android:textSelectHandle">@color/btn_half_blue</item>
        <item name="android:textColorHighlight">@color/btn_half_blue</item>
        <item name="android:textCursorDrawable">@color/btn_half_black</item>
        <item name="android:colorControlActivated">@color/btn_half_black</item>
        <item name="android:colorControlNormal">@color/btn_half_black</item>
    </style>
    <style name="et_default">
        <item name="android:textSelectHandle">@color/btn_half_blue</item>
        <item name="android:textColorHighlight">@color/btn_half_blue</item>
        <item name="android:textCursorDrawable">@color/btn_half_black</item>
        <item name="android:colorControlActivated">@color/btn_half_black</item>
        <item name="android:colorControlNormal">@color/btn_half_black</item>
    </style>
    <style name="horizontal_bar_whitegray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/et_stroke_whitegray</item>
    </style>

    <style name="btn_blue_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/white_deactive</item>

        <item name="android:textSize">@dimen/et_login_text</item>
    </style>

    <style name="iv_story_unseen">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:src">@drawable/ic_story_gradient</item>
    </style>
    <style name="cv_story_seen">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>
    <style name="cv_story_img">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="btn_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/btn_tag_shape</item>
        <item name="android:minWidth">0dp</item>

        <item name="android:padding">5dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/btn_tag_text_gray</item>
        <item name="android:textSize">@dimen/btn_tag_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="switch_blue">
        <item name="android:thumb">@drawable/switch_default_thumb</item>
        <item name="android:track">@drawable/switch_default_track</item>
    </style>

</resources>