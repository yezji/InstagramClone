<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true">
        <shape>
            <solid
                android:color="@color/blue_active" />
            <size
                android:width="200dp"
                android:height="50dp" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/blue_deactive" />
            <size
                android:width="200dp"
                android:height="50dp" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>