<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape
            android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="40dp" />
            <corners
                android:radius="40dp" />
            <solid
                android:color="@color/btn_half_black" />
        </shape>
    </item>

    <item android:state_checked="true">
    <shape
        android:shape="rectangle">
        <size
            android:width="100dp"
            android:height="40dp" />
        <corners
            android:radius="40dp" />
        <solid
            android:color="@color/btn_half_blue" />
    </shape>
</item>
</selector>